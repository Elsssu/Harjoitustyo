<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#75FFFF"
    android:orientation="vertical"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/training" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/battlesymbol" />

                <ImageView
                    android:id="@+id/deleteLutemonImage"
                    android:layout_width="51dp"
                    android:layout_height="63dp"
                    app:srcCompat="@drawable/deletebutton" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/DestinationRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/trainingAreaRB"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Training area"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/battleFieldRB"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Battle field"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/deleteRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="24sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/MovStatusText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="Pick where to move lutemon.\n\nAfter clicking confirm,\nselect your lutemon."
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/confirmMoveButton"
        android:layout_width="144dp"
        android:layout_height="70dp"
        android:layout_gravity="center|center"
        android:text="Confirm"
        android:textSize="20sp" />

</LinearLayout>